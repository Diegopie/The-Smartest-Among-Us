<header>
    <section class="col cont">
      <h2>Create</h2>
    </section>
  </header>
  <main>
    <section>
      <form>
        <!-- For Quiz Name and Choose Auto -->
        <fieldset class="container cont">
          <article class="row">
            {{!-- <h3 class="col-12">Name Your Quiz</h3> --}}
            <label for="qname">Name Your Quiz</label>  
            <!-- This needs to display above but idfk how to do that  https://stackoverflow.com/questions/6046110/styling-form-with-label-above-inputs-->
            <input class="col-12" type="text" id="qname" name="qname">
          </article>
          <article class ="row" id="amnt">
            <h3 class="col-12">How Many Questions Would You Like to Start With?</h3>
            <p>You can add or remove questions later.</p>
            <select id="amnt-val">
              <option selected disabled>Questions</option>
              <option>01</option>
              <option>02</option>
              <option>03</option>
              <option>04</option>
              <option>05</option>
              <option>06</option>
              <option>07</option>
              <option>08</option>
              <option>09</option>
              <option>10</option>
            </select>
            <button class="button" id="amnt-sbt">Yes</button>
          </article>
          <article class ="row hide" id="rand">
            <h3 class="col-12">Would You Like Your Quiz to Be Played in a Random Order?</h3>
            <p>We'll shuffle your quiz every time it's played for a fresh experience every time!</p>
            <button class="button" id="randyes">Yes</button>
            <button class="button" id="randno">No</button>
          </article>
          <article class ="row hide" id="auto">
            <h3 class="col-12">Would You Like to Auto Populate Your Quiz</h3>
            <p>Choose from category and difficulty to instantly create questions and answers for your quiz!</p>
            <button class="button" id="autoyes">Yes</button>
            <button class="button" id="autono">No</button>
          </article>
          <article class="hide" id="settings">
            <article>
              <h3>Choose A Category</h3>
              <button class="cat button">Art</button>
              <button class="cat button">Film</button>
              <button class="cat button">Games</button>
              <button class="cat button">Sports</button>
              <button class="cat button">Anime</button>
              <button class="cat button">Books</button>
              <button class="cat button">Music</button>
              <button class="cat button">Math</button>
            </article>
            <article>
              <h3>Choose A Difficulty</h3>
              <button class="dif button">Easy</button>
              <button class="dif button">Medium</button>
              <button class="dif button">Hard</button>
            </article>
            <button id="sub" class="button">Submit</button>
          </article>
        </fieldset>
        <!-- For Questions -->
        <fieldset id="quiz-cont" class="hide">
          
        </fieldset>
        <button id="new-btn" class="button hide">Add A New Question</button>
        <button id="api" class="button hide">Submit</button>
      </form>
    </section>
  </main>

