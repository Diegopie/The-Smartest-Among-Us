  <!-- login modal -->
  <form class="login">

    <div class="modal fade login" role="dialog" id="loginModal">
      <div class="modal-dialog">
        <div class="modal-content cont modals">
          <button type="button" class="close pull-right" data-dismiss="modal">&times;</button>
          
          <div class="modal-header cont">
            <h3 class="modal-title">Login</h3>
          </div>
          
          <div class="modal-body cont">
            <div class="form-group">
              <input type="text" name="" class="form-control" id="username-input" placeholder="Email">
            </div>
            <div class="form-group">
              <input type="password" name="" class="form-control" id="password-input" placeholder="Password">
            </div>
          </div>

          <div class="modal-footer cont">
            <button type="submit" class="button" id="modLoginButt">Login</button>
          </div>
        </div>
      </div>
    </div>

  </form>

  <!-- sign up modal -->
  <form class="signup">

    <div class="modal fade login" role="dialog" id="signUpModal">
      <div class="modal-dialog">
        <div class="modal-content cont modals">
          <button type="button" class="close pull-right" data-dismiss="modal">&times;</button>

          <div class="modal-header cont">
            <h3 class="modal-title">Sign Up</h3>
          </div>

          <div class="modal-body cont">
            <div class="form-group">
              <input type="text" name="" class="form-control" id="username-input-create" placeholder="Email">
            </div>
            <div class="form-group">
              <input type="password" name="" class="form-control" id="password-input-create" placeholder="Password">
            </div>
          </div>

          <div class="modal-footer cont">
            <button type="submit" class="button" id="modSignButt">Sign Up</button>
          </div>

          <div class="modal-basement cont">
            <a type="submit" id="alreadyHaveAccount">Already Signed Up? Login</a>
          </div>
        </div>
      </div>
    </div>

  </form>

  <!-- validator modal -->
  <form class="validate">

    <section class="modal fade login" role="dialog" id="validateModal">
      <article class="modal-dialog">
        <div class="modal-content cont modals">
          <h3 id="valText"></h3>
          <button class="button link hide">Play Your Quiz!</button>
        </div>
      </article>
    </section>

  </form>

