<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="shortcut icon" href="#">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="assets/fontawesome/css/all.css">
  <link rel="stylesheet" href="assets/styles/index.css">
  <link rel="stylesheet" href="assets/styles/animate.css">
  <title>The Smartest Among Us</title>
</head>

<body>
  <nav class="navbar navbar-expand navbar-dark display-flex justify-content-between">
    <a class="navbar-brand" href="/">
      <img src="assets/img/home-icon.png" alt="The Smartest Among Us">
    </a>

    <div class="collapse navbar-collapse flex-grow-0" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item dropdown">
          <a class="nav-link" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">
            <i class="fas fa-bars" id="hamburger"></i>
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="/play">Play</a>
            <a class="dropdown-item" href="/create">Create Quiz</a>
            <a class="dropdown-item" href="/account">Account</a>
            <button class="dropdown-item" data-toggle="modal" data-target="#loginModal">Login</button>
            <button class="dropdown-item" data-toggle="modal" data-target="#signUpModal">Sign Up</button>
          </div>
        </li>
      </ul>
    </div>
  </nav>

  <div id="background"></div>
  <div id="midground"></div>
  <div id="foreground"></div>

  {{{ body }}}

  <!-- login modal -->
  <form class="login">

    <div class="modal fade login" role="dialog" id="loginModal">
      <div class="modal-dialog">
        <div class="modal-content cont">
          <button type="button" class="close pull-right" data-dismiss="modal">&times;</button>
          <div class="modal-header cont">
            <h3 class="modal-title">Login</h3>
          </div>
          <div class="modal-body cont">

            <div class="form-group">
              <input type="text" name="" class="form-control" id="username-input" placeholder="Username">
            </div>

            <div class="form-group">
              <input type="password" name="" class="form-control" id="password-input" placeholder="Password">
            </div>
          </div>

          <div class="modal-footer cont">
            <button type="submit" class="button">Login</button>
          </div>
        </div>
      </div>
    </div>

  </form>

  <!-- sign up modal -->
  <form class="signup">

    <div class="modal fade login" role="dialog" id="signUpModal">
      <div class="modal-dialog">
        <div class="modal-content cont">
          <button type="button" class="close pull-right" data-dismiss="modal">&times;</button>
          <div class="modal-header cont">
            <h3 class="modal-title">Sign Up</h3>
          </div>
          <div class="modal-body cont">

            <div class="form-group">
              <input type="text" name="" class="form-control" id="username-input-create" placeholder="Username">
            </div>

            <div class="form-group">
              <input type="password" name="" class="form-control" id="password-input-create" placeholder="Password">
            </div>
          </div>

          <div class="modal-footer cont">
            <button type="submit" class="button">Sign Up</button>
          </div>
        </div>
      </div>
    </div>

  </form>

  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="assets/scripts/login.js"></script>
  <script type="text/javascript" src="assets/scripts/signup.js"></script>
</body>

</html>